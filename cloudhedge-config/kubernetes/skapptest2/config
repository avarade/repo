kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: bucketlist
  namespace: 1537341163926-skapptest2-bucketlistapp
spec:
  replicas: 1
  template:
    metadata:
      labels:
        deploy: bucketlist
        cbservice: bucketlist
    spec:
      containers:
        - name: bucketlist
          image: amithaval/python
          env:
            - name: CB_ENV_NAME
              value: 1537341163926-skapptest2-bucketlistapp
            - name: CB_CLUSTER_ID
              value: 5ba1f119d79f59000e318743

---
kind: Service
apiVersion: v1
