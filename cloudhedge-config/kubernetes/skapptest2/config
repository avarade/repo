  labels:
    service: bucketlist
    cbservice: bucketlist
  name: bucketlist
  namespace: 1537341163926-skapptest2-bucketlistapp
spec:
  type: NodePort
  ports:
    - port: 5002
      targetPort: 5002
      name: port5002
  selector:
    deploy: bucketlist

