  name: bucketlist
  namespace: 1537341163926-skapptest2-bucketlistapp
spec:
  scaleTargetRef:
    apiVersion: apps/v1beta1
    kind: Deployment
    name: bucketlist
  minReplicas: 1
  maxReplicas: 1
  targetCPUUtilizationPercentage: 50

