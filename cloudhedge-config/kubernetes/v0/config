kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: python
  namespace: 1538740440163-v0-bucketlistapp
spec:
  replicas: 1
  template:
    metadata:
      labels:
        deploy: python
        cbservice: python
    spec:
      containers:
        - name: python
          image: ppanditrao/linux-python-app
          env:
            - name: CB_ENV_NAME
              value: 1538740440163-v0-bucketlistapp
            - name: CB_CLUSTER_ID
              value: 5bb74b93b24e40000efd9cd5

---
kind: Service
apiVersion: v1
metadata:
  labels:
    service: python
    cbservice: python
  name: python
  namespace: 1538740440163-v0-bucketlistapp
spec:
  type: LoadBalancer
  ports:
    - port: 5002
      targetPort: 5002
      name: port5002
  selector:
    deploy: python

---
kind: HorizontalPodAutoscaler
apiVersion: autoscaling/v1
metadata:
  name: python
  namespace: 1538740440163-v0-bucketlistapp
spec:
  scaleTargetRef:
    apiVersion: apps/v1beta1
    kind: Deployment
    name: python
  minReplicas: 1
  maxReplicas: 1
  targetCPUUtilizationPercentage: 50

