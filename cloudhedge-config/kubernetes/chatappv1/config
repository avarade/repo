kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: ch-node
  namespace: 1538739618736-chatappv1-chatapp
spec:
  replicas: 2
  template:
    metadata:
      labels:
        deploy: ch-node
        cbservice: ch-node
    spec:
      containers:
        - name: ch-node
          image: avarade/ch-node
          env:
            - name: CH_REDIS_PREFIX
              value: ch-redis.
            - name: CH_REDIS_PORT
              value: '6379'
            - name: CB_ENV_NAME
              value: 1538739618736-chatappv1-chatapp
            - name: CB_CLUSTER_ID
              value: 5bb74b93b24e40000efd9cd5

---
